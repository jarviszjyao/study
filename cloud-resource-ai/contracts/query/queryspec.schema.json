{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatResponse",
  "type": "object",
  "required": ["sessionId", "message"],
  "properties": {
    "sessionId": {
      "type": "string"
    },
    "message": {
      "type": "string",
      "description": "Assistant reply text"
    },
    "visualization": {
      "$ref": "./visualization.schema.json"
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "payload": { "type": "object" }
        }
      }
    },
    "debug": {
      "type": "object",
      "description": "Optional debug info",
      "additionalProperties": true
    }
  }
}
