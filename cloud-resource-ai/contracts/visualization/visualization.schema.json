{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuerySpec",
  "type": "object",
  "required": ["intent"],
  "properties": {
    "intent": {
      "type": "string",
      "enum": [
        "knowledge_answer",
        "skill_execution",
        "visualization_request",
        "clarification"
      ]
    },
    "skill": {
      "type": "string",
      "description": "Skill name if execution required"
    },
    "parameters": {
      "type": "object",
      "description": "Skill input parameters",
      "additionalProperties": true
    },
    "visualization": {
      "type": "string",
      "description": "Requested visualization type"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  }
}
